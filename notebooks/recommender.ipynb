# -------------------------------
# Step 4: Feature Creation (Genres)
# -------------------------------
movies['genres'] = movies['genres'].fillna('').astype(str).str.split('|')
movies[['title', 'genres']].head()

# -------------------------------
# Step 5: Jaccard Similarity
# -------------------------------
def jaccard_similarity(a, b):
    a, b = set(a), set(b)
    if not a and not b:
        return 0.0
    return len(a & b) / len(a | b)

def recommend_movies(title, top_n=5):
    seed = movies[movies['title'] == title].iloc[0]
    scores = []

    for _, row in movies.iterrows():
        if row['title'] == title:
            continue
        score = jaccard_similarity(seed['genres'], row['genres'])
        scores.append((row['title'], round(score, 3)))

    return sorted(scores, key=lambda x: x[1], reverse=True)[:top_n]

# -------------------------------
# Step 6: Generate Recommendations
# -------------------------------
recommendations = recommend_movies("Toy Story (1995)", top_n=5)
recommendations

# -------------------------------
# Step 7: Explanation
# -------------------------------
def explain(seed_title, rec_title):
    seed_genres = set(movies[movies['title'] == seed_title]['genres'].iloc[0])
    rec_genres = set(movies[movies['title'] == rec_title]['genres'].iloc[0])
    return seed_genres.intersection(rec_genres)

for title, score in recommendations:
    print(f"{title} | Shared genres:", explain("Toy Story (1995)", title))

# -------------------------------
# Step 8: Save Results
# -------------------------------
df = pd.DataFrame(recommendations, columns=["Title", "Similarity"])
df.to_csv("../data/processed/recommendations.csv", index=False)

